<!-- example at default location which changes the name of the default manager from
     default to myApp -->
<cache2k>

  <version>1.0</version>
  <defaultManagerName>myApp</defaultManagerName>

  <defaults>

    <cache>
      <entryCapacity>1234</entryCapacity>
    </cache>

  </defaults>

  <caches>

    <cache>
      <name>flowers</name>
      <expireAfterWrite>47s</expireAfterWrite>
    </cache>

    <cache>
      <name>example</name>
    </cache>

  </caches>

</cache2k>